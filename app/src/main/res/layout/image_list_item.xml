<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    >

    <!--图片-->
    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/image"
        android:layout_margin="@dimen/margin_list_item_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/image_item"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:siBorderColor="@color/colorAccent"
        app:siBorderWidth="0dp"
        app:siRadius="0dp"
        app:siSquare="true"
        tools:layout_conversion_absoluteHeight="380dp"
        tools:layout_conversion_absoluteWidth="380dp"
        tools:layout_conversion_absoluteX="2dp"
        tools:layout_conversion_absoluteY="2dp"
        tools:src="@android:color/black"
        />

    <!--选中-->
    <ImageView
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/margin_top_image_list_item_checkbox"
        android:layout_marginTop="@dimen/margin_top_image_list_item_checkbox"
        android:src="@drawable/ic_checkbox"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="@+id/image"
        app:layout_constraintTop_toTopOf="@+id/image"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <!--文件类型图标-->
        <ImageView
            android:id="@+id/file_type"
            style="@style/imag_list_file_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_top_image_list_item_checkbox"
            android:scaleType="fitCenter"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintLeft_toLeftOf="@id/image"
            tools:ignore="SpUsage"
            tools:src="@drawable/ic_gif_black_48px"
            tools:visibility="visible"
            />
    </FrameLayout>
</RelativeLayout>