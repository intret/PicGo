<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_list_item_image_view"
            android:src="@drawable/hamburger"
            app:siBorderColor="@color/colorAccent"
            app:siBorderWidth="0dp"
            app:siRadius="0dp"
            app:siSquare="true"
            tools:src="@color/colorPrimaryDark"
            />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/mt_imagelist_item_checkbox"
        android:layout_marginTop="@dimen/mt_imagelist_item_checkbox"
        android:checked="true"
        android:visibility="gone"
        tools:checked="true"
        tools:visibility="visible"
        />

    <!--<ImageView-->
    <!--android:id="@+id/img"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--tools:src="@color/colorAccent"-->
    <!--/>-->
</android.support.v7.widget.CardView>