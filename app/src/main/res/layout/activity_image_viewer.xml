<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.intret.app.picgo.ui.main.ImageViewerActivity">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <cn.intret.app.picgo.view.HackyViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black"
            >
        </cn.intret.app.picgo.view.HackyViewPager>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="0"
        android:background="@drawable/bg_tool_bar_gradient"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/btn_delete"
            style="@style/image_viewer_toolbar_btn"
            android:src="@drawable/ic_delete_white"/>

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/image_viewer_toolbar_btn"
            android:src="@drawable/ic_share_white_24px"

            />

        <ImageView
            android:id="@+id/btn_detail"
            style="@style/image_viewer_toolbar_btn"
            android:src="@drawable/ic_info_white"
            />

        <TextView
            android:id="@+id/brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/translucent"
            android:textColor="@android:color/white"
            android:visibility="gone"
            tools:text="128x111"
            />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
