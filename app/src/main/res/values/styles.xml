<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- ToolBar -->
    <!--<style name="ToolBarStyle" parent="Theme.AppCompat">-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->
        <!--<item name="actionMenuTextColor">@android:color/white</item>-->
        <!--<item name="actionOverflowButtonStyle">@style/ActionButtonOverflowStyle</item>-->
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
    <!--</style>-->

    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:shadowColor">@color/white</item>
    </style>

    <style name="AppTheme.ImageViewer" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">false</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:immersive">true</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:toolbarStyle">@style/MyActionBar</item>
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
        <item name="android:windowSharedElementEnterTransition">@transition/transition_image</item>
        <item name="android:windowSharedElementExitTransition">@transition/transition_image</item>
    </style>
    <style name="Main" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:immersive">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:radioButtonStyle">@style/MenuRadioButtonStyle</item>
    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="android:elevation" tools:ignore="NewApi">4dp</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_white_24px</item>

        <item name="titleTextAppearance">@color/action_bar_title_color</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/action_bar_title_color</item>
    </style>

    <style name="MDLightBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground" >@color/translucent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MenuRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/ic_radio_selector</item>
    </style>

    <style name="ViewModeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ImageListFileTypeIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.85</item>
    </style>

    <style name="ImageViewerToolbarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ConflictListItemImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DialpadNumberText">
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">40dp</item>
    </style>
    <style name="DialpadNumberLetter" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DialpadItemLayout">
        <item name="android:backgroundTint">@drawable/bg_dialpad_item_selector</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ImageDetailTextBase" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ImageDetailTextBase.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.8</item>
        <item name="android:gravity">right</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="ImageDetailTextBase.Title.Cell">
        <item name="android:layout_columnSpan">2</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>

    </style>

    <style name="ImageDetailTextBase.Value">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageDetailTextBase.Value.Cell">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_columnSpan">3</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ImageListImage">
        <item name="android:foreground">@drawable/ripple2</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/image_item</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ToolbarText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="ImageToolBarItemLayout">
        <item name="android:gravity">center</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ImageToolbarItemImage">
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

</resources>
