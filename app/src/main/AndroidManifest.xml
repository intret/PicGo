<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.intret.app.picgo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.main.MainActivity"
            android:theme="@style/Main"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".screens.floating.FloatWindowService"
            android:exported="false">
        </service>
        <service
            android:name=".app.service.SelectedImageFloatViewService"
            android:exported="false">
        </service>

        <activity
            android:name=".screens.image.ImageActivity"
            android:theme="@style/AppTheme.ImageViewer">
        </activity>
        <activity
            android:name=".screens.image.DragPhotoActivity"
            android:theme="@style/translucent"/>
        <activity android:name=".screens.pref.AboutActivity">
            <intent-filter>
                <action android:name="picgo.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".screens.pref.SettingActivity">
        </activity>
    </application>

</manifest>